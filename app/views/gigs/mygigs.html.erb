<div class="contents">
<div class="container">
	<h3>M Tasks<small  class="pull-right"><%= @gigs.count %>Total</small></h3>
	<table class="table table-striped">
		<thead>
			<tr>
				<th class="text-center">Status</th>
				<th>Name</th>
				<th>Category</th>	
				<th>Budget</th>
				<th class="text-center">Proposals</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @gigs.each do |gig| %>
			<tr>
				<td>
				 <% if gig.open %>
                   open
                   <%else%>
                   closed
				 <% end %>
				</td>
				<td><%= link_to gig.name, gig %></td>
				<td><%= gig.category.name %></td>
				<td><%= number_to_currency(gig.budget,precision: 0) %></td>
				<td class="text-center"><%= gig.proposals.count %></td>
				<td><%= link_to "Edit", edit_gig_path(gig), class: "btn btn-success"  %></td>
				<td><%= link_to "Delete", gig, method: :delete, data:{ confirm: "Are you sure?"} , class: "btn btn-danger" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>	
</div>