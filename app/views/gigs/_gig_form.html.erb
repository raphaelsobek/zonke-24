<div class="contents">
    <section id=post>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    <h3 class="sub-heading">Post a Task</h3>
                    <div class="content-inner-detail">
                        <%= simple_form_for :gig, url: gigs_path, html:{multipart: true} do |f| %>
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <div class="form-group">
                                    <%= f.label :name %>
                                    <%= f.text_field :name,   class: "form-control input-lg" %>
                                    <small class="help-block">Name of your job</small>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <div class="form-group">
                                    <%= f.label :budget %>
                                    <%= f.text_field :budget, class: "form-control input-lg" %>
                                    <small class="help-block">ex: $1,000 </small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                            <div class="form-group">
                                    <%= f.label :category_id %>
                                    <%= f.select :category_id,options_from_collection_for_select(Category.all, :id, :name),{},class: "form-control input-lg" %>
                                    <small class="help-block">Select the category for this Task</small>
                                </div>
                                </div>
                                <div class="col-xs-12 col-md-6">
                                <div class="form-group">
                                    <%= f.label :location %>
                                    <%= f.text_field :location,  class: "form-control input-lg" %>
                                    <small class="help-block">Randburg, Sandton, Melville, Booksburg, ect.)</small>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <div class="form-group">
                                    <%= f.label :description %>
                                    <%= f.text_area :description, class: "form-control", rows: 10 %>
                                    <small class="help-block">Tell us everything about your job (website,virtual assistant, Handyman ,ect.)</small>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <div class="form-group">
                                    <%= f.label :image %>
                                    <%= f.file_field :image, class: "form-control" %>
                                    <small class="help-block">Tell us everything about your job (website,virtual assistant, Handyman ,ect.)</small>
                                </div>
                            </div>
                        </div>
                        <legend>List Skills required for this Task</legend>
                        <div class="form-group">
                        <%= f.text_area :skill_list, rows: 3, class: "form-control" %>
                        <small class="help-block">Separate skills with a comma. </small>
                            
                        </div>

                        <%= f.submit "Save Task", class: "btn btn-primary input-lg" %>
                        <% end %>
                        <br>
                        <br>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<br>