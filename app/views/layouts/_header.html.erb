<div class="navbar navbar-default navbar-static-top ">
    <div class="container">
        <div class="navbar-header">
            <buttom type="buttom" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu" aria-expanded="false">
                <span class="sr-only">Toggle Navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </buttom>
                  <%= link_to image_tag("logo.png", alt: "logo"), root_path, class: 'navbar-brand' %>
        </div> <!-- end navbar-header -->
        <div class="collapse navbar-collapse" id="menu">
            <ul class="nav navbar-nav browse-jobs">
                <li class="btn btn-default navbar-btn">Browse all tasks  &raquo;</li>
                <%= link_to "Post task &raquo;".html_safe, new_gig_path, class: "btn btn-warning navbar-btn bg-orange" %>
            </ul>

            <div class=" navbar-right">
                <% if user_signed_in? %>
               
                <%= link_to "My Tasks", mygigs_path, class: "btn btn-success navbar-btn" %>
                <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-info navbar-btn" %>
                <%= link_to "Sign Out", destroy_user_session_path, class: "btn btn-warning navbar-btn bg-orange" , method: :delete %>
                 <%= image_tag(current_user.avatar.url(:thumb), class: "round-image-50")  %>
                <% else %>
                <%= link_to "sign in", new_user_session_path, class: "btn btn-default navbar-btn" %>
                <%= link_to "sign up", new_user_registration_path, class: "btn btn-warning navbar-btn bg-orange" %>
                <% end %>
            </div>   
        </div> <!-- end menu div -->
    </div> <!-- end container div -->
</div>


 