
<div class="wrapper">
    <div class="form-signin">       
      <h2 class="form-signin-heading">Sign IN</h2>
      <div class="content-inner-details">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-control">
  <%= f.label :email %>
    <%= f.email_field :email, required: false, autofocus: true ,class: "form-control"%>
    </div>
     <div class="form-control">
     <%= f.label :password %>
    <%= f.password_field :password, required: false,class: "form-control" %>
    </div>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-control">
    <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>